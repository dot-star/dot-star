# Use case-insensitive file name tab autocomplete.
set completion-ignore-case on

# Tab once for autocompletion.
set show-all-if-ambiguous on
set show-all-if-unmodified on

# Append a character denoting a file's type to the filename when listing
# possible completions. Like `ls -F'.
set visible-stats on

# Use vi key bindings with readline compatible applications.
set editing-mode vi
set keymap vi
